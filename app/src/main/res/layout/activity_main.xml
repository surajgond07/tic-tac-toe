<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark_blue">

<!-- Button 5-->

    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dark_blue">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage5"/>

    </RelativeLayout>

<!-- Button 4-->

    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/btn5"
        android:background="@color/dark_blue">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage4"/>

    </RelativeLayout>

    <!-- Button 6-->

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/btn5"
        android:background="@color/dark_blue">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage6"/>

    </RelativeLayout>

    <!--    Horizontal Line Top-->
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#F69E78"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="8dp">

    </RelativeLayout>

    <!--    Horizontal Line Buttom-->

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#F69E78"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="8dp">

    </RelativeLayout>

<!--    Vertical Line Left-->
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#F69E78"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_marginRight="-14dp">

    </RelativeLayout>

    <!--    Vertical Line Right-->
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#F69E78"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn5"
        android:layout_marginLeft="-14dp">

    </RelativeLayout>


<!--    Reset Button-->
    <Button
        android:id="@+id/Reset"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/reset_btn_color"
        android:text="Reset"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Reset"
        android:layout_below="@+id/Reset"
        android:layout_marginTop="50dp"
        android:text="Developed by - Suraj Gond"
        android:textSize="20sp"
        android:textColor="#949090"
        android:textStyle="bold">

<!--        android:textColor="#040A1B"-->

    </TextView>

    <!-- Button 8-->

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dark_blue"
        android:layout_below="@+id/btn5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage8"/>

    </RelativeLayout>


    <!-- Button 7-->
    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/btn8"
        android:background="@color/dark_blue"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage7"/>

    </RelativeLayout>

    <!-- Button 9-->
    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/btn8"
        android:background="@color/dark_blue"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage9"/>

    </RelativeLayout>

<!--    Score Board-->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score X :- 0"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/ScoreX">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score O :- 0"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/ScoreO">

        </TextView>
    </LinearLayout>


    <!-- Button 2-->

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dark_blue"
        android:layout_above="@+id/btn5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage2"/>

    </RelativeLayout>

    <!-- Button 1-->

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/btn2"
        android:layout_marginBottom="20dp"
        android:background="@color/dark_blue"
        android:layout_above="@+id/btn5">

        <ImageView
            android:id="@+id/buttonImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <!-- Button 3-->

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/btn2"
        android:layout_marginBottom="20dp"
        android:background="@color/dark_blue"
        android:layout_above="@+id/btn5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage3"/>

    </RelativeLayout>


    </RelativeLayout>